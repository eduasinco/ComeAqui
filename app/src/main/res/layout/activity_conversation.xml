<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".chat.conversation.ConversationActivity"
        android:orientation="vertical">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/background_chat"
            android:id="@+id/backGround" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop" android:alpha="0.05"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".chat.conversation.ConversationActivity"
            android:orientation="vertical">

        <LinearLayout
                android:background="#EBEBEB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dinner_image"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:src="@drawable/no_profile_photo"/>
            <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kevin"
                    android:layout_gravity="center" android:paddingLeft="8dp" android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMensajes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
        />
        <LinearLayout
                android:background="#EBEBEB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="16dp">
            <EditText
                    android:background="@drawable/send_input_text"
                    android:id="@+id/txtMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="Escribe un mensaje"
                    android:layout_weight="1" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
                    android:paddingStart="16dp"/>

            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp" app:srcCompat="@drawable/send_icon"
                    android:id="@+id/btnEnviar" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>