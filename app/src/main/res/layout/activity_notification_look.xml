<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".notification.NotificationLookActivity">
    <Button
            android:text="Confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/placeOrderButton"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
    />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView4"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="210dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:padding="24dp"
                      android:background="@color/grey_light"
        >
            <TextView
                    android:text="Plate Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/postPlateName" android:textSize="18sp"
                    android:textStyle="bold" android:textColor="@color/colorPrimary" android:layout_marginBottom="8dp"/>
            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/types"
                    app:layout_constraintTop_toBottomOf="@+id/plate_name" app:layout_constraintStart_toStartOf="parent"
                    android:paddingBottom="16dp">

            </FrameLayout>
            <TextView
                    android:text="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView18" android:textStyle="bold"
                    android:textColor="@color/colorPrimary" android:paddingBottom="8dp"/>
            <TextView
                    android:text="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/post_description"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="8dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp" android:id="@+id/post_image_layout" android:visibility="gone">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp" app:srcCompat="@drawable/no_food"
                        android:id="@+id/post_image" android:visibility="visible"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                    android:text="Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView20" android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginBottom="8dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/loc_icon"
                        android:id="@+id/locationImage2" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:text="Calle Julian Romea, 5, 6D"
                        android:lines="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/posterLocation"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/locationImage" android:layout_marginStart="16dp"
                        android:gravity="center_vertical" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" android:layout_weight="1"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp" app:srcCompat="@drawable/world_map"
                    android:id="@+id/static_map"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="8dp">
                <TextView
                        android:text="Meal time: "
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/meal_time" android:layout_weight="1"
                        android:textStyle="bold" android:textColor="@color/colorPrimary"/>
                <TextView
                        android:text="-- : --"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/time" android:layout_weight="1"
                        android:textAlignment="textEnd" android:textStyle="bold" android:textSize="18sp"
                        android:textColor="@color/grey"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:layout_marginBottom="50dp">
                <TextView
                        android:text="Price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/textView25" android:layout_weight="1"
                        android:textStyle="bold" android:textColor="@color/colorPrimary"/>
                <TextView
                        android:text="-.--â‚¬"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/price" android:layout_weight="1"
                        android:textAlignment="textEnd" android:textStyle="bold" android:textSize="18sp"
                        android:textColor="@color/grey"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_stroke"
            app:cardElevation="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/back" android:id="@+id/back"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" app:srcCompat="@drawable/background"
                    android:id="@+id/imageView4"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                    app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:alpha="0.3"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dinner_image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/no_profile_photo"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="415dp"
                    android:layout_height="66dp" android:id="@+id/linearLayout5"
                    app:layout_constraintTop_toBottomOf="@+id/dinner_image"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp">
                <TextView
                        android:text="Eduardo Rodriguez"
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/dinner_name"
                        android:textAlignment="center"
                        android:textStyle="bold" android:textSize="18sp" android:textColor="@android:color/white"/>
                <TextView
                        android:text="username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/username" android:textAlignment="center"
                        android:textSize="14sp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
                <TextView
                        android:text="Quiere probar to plato!"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView17" android:textAlignment="center"
                        android:textColor="@android:color/black" android:textStyle="bold"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
