<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".profile.EditProfileActivity">

    <androidx.core.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_edit_profile"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".profile.EditProfileActivity" android:layout_marginTop="56dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="16dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Profile Picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView9" android:textStyle="bold"
                        android:textSize="24sp" android:textColor="@android:color/black" android:layout_weight="1"/>
                <TextView
                        android:text="Edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/edit_profile_picture"
                        android:layout_weight="1" android:textAlignment="textEnd" android:gravity="center_vertical"
                        android:textColor="@color/colorPrimary" android:textSize="18sp"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/no_profile_photo"
                        app:civ_border_color="@android:color/white"
                        app:civ_shadow="false"
                        app:civ_shadow_color="@color/colorPrimaryDark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/profile_image"
                        app:srcCompat="@drawable/dairyfill"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_gravity="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Cover Photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView16" android:textStyle="bold"
                        android:textSize="24sp" android:textColor="@android:color/black" android:layout_weight="1"/>
                <TextView
                        android:text="Edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/edit_cover_photo"
                        android:layout_weight="1" android:textAlignment="textEnd" android:gravity="center_vertical"
                        android:textColor="@color/colorPrimary" android:textSize="18sp"/>
            </LinearLayout>
            <ImageView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp" app:srcCompat="@drawable/background"
                    android:id="@+id/imageView10" android:scaleType="centerCrop"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView22" android:textStyle="bold"
                        android:textSize="24sp" android:textColor="@android:color/black" android:layout_weight="1"/>
                <TextView
                        android:text="Edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/add_bio"
                        android:layout_weight="1" android:textAlignment="textEnd" android:gravity="center_vertical"
                        android:textColor="@color/colorPrimary" android:textSize="18sp"/>
            </LinearLayout>
            <EditText
                    android:id="@+id/orderMessage"
                    android:gravity="top|left"
                    android:background="#ffffff"
                    android:inputType="textMultiLine"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:lines="20"
                    android:scrollHorizontally="false"
                    android:hint="Description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="19dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView23" android:textStyle="bold"
                        android:textSize="24sp" android:textColor="@android:color/black" android:layout_weight="1"/>
                <TextView
                        android:text="Edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/edit_cover_photo2"
                        android:layout_weight="1" android:textAlignment="textEnd" android:gravity="center_vertical"
                        android:textColor="@color/colorPrimary" android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="First Name:"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView2"
                        app:layout_constraintTop_toBottomOf="@+id/profile_image"
                        app:layout_constraintStart_toStartOf="parent" android:textSize="18sp"
                        android:layout_weight="0"
                        android:gravity="center_vertical" android:textStyle="bold"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editFirstName" app:layout_constraintTop_toBottomOf="@+id/profile_image"
                        app:layout_constraintStart_toStartOf="parent"
                        android:gravity="center_vertical" android:hint="Eduardo"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="First Name:"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView2"
                        app:layout_constraintTop_toBottomOf="@+id/profile_image"
                        app:layout_constraintStart_toStartOf="parent" android:textSize="18sp"
                        android:layout_weight="0"
                        android:gravity="center_vertical" android:textStyle="bold"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editLastName" app:layout_constraintTop_toBottomOf="@+id/profile_image"
                        app:layout_constraintStart_toStartOf="parent"
                        android:gravity="center_vertical" android:hint="Rodriguez Perez"/>
            </LinearLayout>
            <Button
                    android:text="Save"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/saveButton"
                    app:layout_constraintTop_toBottomOf="@+id/orderMessage"
                    app:layout_constraintEnd_toEndOf="@+id/orderMessage"
                    app:layout_constraintStart_toStartOf="@+id/orderMessage"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@color/colorPrimary" android:textColor="@android:color/white"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp" android:gravity="center_vertical" android:paddingStart="8dp">
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp" app:srcCompat="@drawable/back_white" android:id="@+id/back"
                android:layout_weight="0"/>
        <TextView
                android:text="Edit Profile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/textView6" android:layout_weight="0"
                android:gravity="center_vertical" android:textStyle="bold" android:textSize="24sp"
                android:textColor="@android:color/white" android:paddingStart="24dp"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>