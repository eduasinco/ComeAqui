<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".eat.MapCardFragment">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:lines="3"
                android:text="Eduardo Rodriguez Perez"
                android:layout_width="0dp"
                android:layout_height="25dp" android:id="@+id/poster_name"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="textStart" app:layout_constraintStart_toEndOf="@+id/poster_image"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/poster_image"
                android:textStyle="bold"/>
        <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/no_profile_photo"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="1"
                app:civ_shadow_color="@color/colorPrimaryDark"
                android:id="@+id/poster_image"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <ImageView
                android:src="@drawable/no_food"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:id="@+id/post_iamge"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimaryLight"
                app:layout_constraintTop_toTopOf="@+id/plate_name"
                app:layout_constraintBottom_toBottomOf="@+id/textView16"/>
        <TextView
                android:text="Meal time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorPrimary" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/description" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="_ . __â‚¬"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                app:layout_constraintBottom_toBottomOf="@+id/time" app:layout_constraintEnd_toStartOf="@+id/post_iamge"
                android:layout_marginEnd="16dp"/>
        <TextView
                android:text="-- : --"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                app:layout_constraintBottom_toBottomOf="@+id/textView16"
                app:layout_constraintStart_toEndOf="@+id/textView16"
                android:layout_marginStart="16dp" android:textStyle="bold" android:textColor="@color/grey"
                android:textSize="16sp"/>
        <TextView
                android:text="@eduasinco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/poster_username" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/poster_name"
                app:layout_constraintBottom_toBottomOf="@+id/poster_image"
                app:layout_constraintStart_toStartOf="@+id/poster_name"/>
        <TextView
                android:text="Plate Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plate_name" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/poster_image" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:textColor="@color/colorPrimary"/>
        <TextView
                android:text="Description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/plate_name"
                app:layout_constraintEnd_toStartOf="@+id/post_iamge" android:layout_marginEnd="8dp"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>