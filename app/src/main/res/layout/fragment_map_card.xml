<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".eat.MapCardFragment">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/flag_transparent"
            android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/constraintLayout5"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0">

            <ImageView
                    android:src="@drawable/card_background"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/imageView4"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/poster_username"
                    android:text="@eduasinco"
                    app:layout_constraintStart_toStartOf="@+id/poster_name"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/poster_name"/>
            <TextView
                    android:lines="3"
                    android:text="Eduardo Rodriguez Perez"
                    android:layout_width="0dp"
                    android:layout_height="21dp" android:id="@+id/poster_name"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center_vertical"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:layout_marginStart="120dp"
                    app:layout_constraintStart_toStartOf="@+id/imageView4" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="@+id/imageView4"/>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:id="@+id/constraintLayout8"
                    app:layout_constraintTop_toBottomOf="@+id/poster_username" android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp">

                <ImageView
                        android:src="@drawable/card_button"
                        android:layout_width="0dp"
                        android:layout_height="0dp" android:id="@+id/card_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"/>
                <ImageView
                        android:src="@drawable/no_food"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/post_iamge"
                        android:background="@color/colorPrimaryLight"
                        app:layout_constraintBottom_toBottomOf="@+id/card_button"
                        app:layout_constraintEnd_toEndOf="@+id/card_button" android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/card_button"
                        android:layout_marginBottom="16dp"/>
                <TextView
                        android:text="Meal time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16" app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/post_iamge"/>
                <TextView
                        android:text="_ . __â‚¬"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price"
                        app:layout_constraintBottom_toBottomOf="@+id/time"
                        app:layout_constraintEnd_toStartOf="@+id/post_iamge"
                        android:layout_marginEnd="16dp"/>
                <TextView
                        android:text="Description"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/post_iamge" android:layout_marginEnd="8dp"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/container2" android:layout_marginStart="16dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView16"/>
                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                        android:id="@+id/container2" app:layout_constraintTop_toBottomOf="@+id/plate_name"
                >

                </FrameLayout>
                <TextView
                        android:text="-- : --"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/time"
                        app:layout_constraintBottom_toBottomOf="@+id/textView16"
                        app:layout_constraintStart_toEndOf="@+id/textView16"
                        android:layout_marginStart="16dp" android:textStyle="bold" android:textColor="@color/grey"
                        android:textSize="16sp"/>
                <TextView
                        android:text="Plate Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/plate_name"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="@+id/post_iamge"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
        <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/no_profile_photo"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="1"
                app:civ_shadow_color="@color/colorPrimaryDark"
                android:id="@+id/poster_image"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>