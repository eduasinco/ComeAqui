<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        tools:context=".order.OrderLookActivity">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/scrollView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="230dp" android:padding="32dp" android:layout_marginTop="230dp"
                    android:layout_marginEnd="32dp" android:layout_marginStart="32dp">

                <ImageView
                        android:src="@drawable/no_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/post_image"
                        android:background="@color/colorPrimaryLight"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="visible" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
            </androidx.cardview.widget.CardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@drawable/box_element"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/constraintLayout4"
                    app:layout_constraintHorizontal_bias="0.0" tools:layout_editor_absoluteY="381dp">

                <TextView
                        android:text="Calle Julian Romea, 5, 6D"
                        android:lines="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/posterLocation"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/locationImage" android:layout_marginStart="16dp"
                        android:gravity="center_vertical" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/loc_icon"
                        android:id="@+id/locationImage" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/constraintLayout7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:layout_weight="0" android:padding="16dp">

                    <ImageView
                            android:layout_width="300dp"
                            android:layout_height="200dp" app:srcCompat="@drawable/world_map"
                            android:id="@+id/static_map"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/map_food_icon"
                            android:id="@+id/map_icon" app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                        android:background="@drawable/box_element"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout7">
                    <LinearLayout
                            android:background="@drawable/box_element"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" android:padding="16dp">
                        <TextView
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="Plate Name"
                                android:layout_height="match_parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:id="@+id/postName"
                                app:layout_constraintTop_toBottomOf="@+id/constraintLayout7" android:layout_weight="1"
                                android:gravity="center_vertical" android:layout_width="wrap_content"/>
                        <TextView
                                android:text="€9.50"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/postPrice" app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="@+id/postName"
                                android:gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" android:padding="16dp">
                        <TextView
                                android:text="Subtotal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/subtotal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/view5" android:layout_weight="1"
                                android:gravity="center_vertical"/>
                        <TextView
                                android:text="€9.50"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/postSubtotalPrice" app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="@+id/postName"
                                android:gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                            android:background="@drawable/box_element"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" android:padding="16dp">
                        <TextView
                                android:text="Total"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView27"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/view6" android:layout_weight="1"
                                android:gravity="center_vertical"/>
                        <TextView
                                android:text="€9.50"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/totalPrice" app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="@+id/textView27"
                                android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="200dp"
                                           app:layout_constraintTop_toTopOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           android:elevation="4dp"
                                           app:layout_constraintEnd_toEndOf="parent"
                                           app:layout_constraintBottom_toBottomOf="parent"
                                           android:layout_marginBottom="20dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/background"
                    android:id="@+id/imageView5"
                    android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/constraintLayout5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:layout_marginTop="32dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="245dp"
                android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/poster_image"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/poster_image"
                app:layout_constraintBottom_toBottomOf="@+id/poster_image">
            <TextView
                    android:lines="1"
                    android:text="Eduardo Rodriguez Perez"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/poster_name"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center_vertical"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="22dp" tools:layout_editor_absoluteX="81dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/poster_username"
                    android:text="@eduasinco"
                    tools:layout_editor_absoluteX="262dp" tools:layout_editor_absoluteY="26dp"/>
        </LinearLayout>
        <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="49dp"
                android:layout_height="45dp"
                android:src="@drawable/no_profile_photo"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="1"
                app:civ_shadow_color="@color/colorPrimaryDark"
                android:id="@+id/poster_image"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                tools:context=".utilities.FoodElementFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:id="@+id/post_button"
                app:layout_constraintTop_toBottomOf="@+id/poster_image"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                android:paddingBottom="20dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:padding="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="Plate Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/plate_name"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                            android:textStyle="bold" android:textColor="@color/colorPrimary"
                            android:paddingBottom="8dp" android:layout_weight="1"/>
                    <TextView
                            android:text="Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/order_status"
                            android:textAlignment="textEnd" android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                        android:text="Description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/food_types" android:paddingBottom="16dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="Meal time: "
                            android:layout_height="wrap_content" android:id="@+id/textView25"
                            android:textStyle="bold" android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"/>
                    <TextView
                            android:text="-- : --"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/time" android:layout_weight="1"
                            android:textAlignment="textStart" android:textStyle="bold" android:textSize="18sp"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:text="_ . __€"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/price"
                            app:layout_constraintBottom_toBottomOf="@+id/time"
                            app:layout_constraintEnd_toEndOf="parent"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>