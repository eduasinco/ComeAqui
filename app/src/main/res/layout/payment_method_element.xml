<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="70dp" android:layout_weight="0">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/credit_card" android:id="@+id/image"
            android:layout_weight="0" android:padding="16dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="0">
        <TextView
                android:text="Payment type"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/payment_type" android:layout_weight="1"
                android:gravity="bottom|center_vertical" android:textColor="@android:color/black"
                android:textSize="18sp"/>
        <TextView
                android:text="Payment info"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/payment_info" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>