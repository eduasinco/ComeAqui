<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#257701ff"
        tools:context=".AddFoodActivity">
    <EditText
            android:textAlignment="center"
            android:textColorHint="#a9000000"
            android:hint="What are you Preparing?"
            android:background="#d6ffffff"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/foodName"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintBottom_toTopOf="@+id/guideline"/>
    <TextView
            android:text="New Plate"
            android:textSize="18sp"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/foodName"/>

    <TextView
            android:text="How is your Offer?"
            android:id="@+id/textView6"
            android:gravity="bottom|center"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/guideline"/>

    <Spinner
            android:id="@+id/spinner"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/guideline8" app:layout_constraintEnd_toStartOf="@+id/guideline9"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:background="@android:color/background_light"/>

    <TextView
            android:text="What is your Price?"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/price" android:gravity="bottom|center"
            android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="@+id/guideline8" app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/spinner"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/seekBar"
            app:layout_constraintStart_toStartOf="@+id/guideline8" app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/price" android:background="@android:color/background_light"/>

    <TextView
            android:text="Dish Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:gravity="bottom|center"
            android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="@+id/guideline8" app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"/>
    <EditText
            android:id="@+id/description"
            android:gravity="top|left"
            android:background="#ffffff"
            android:inputType="textMultiLine"
            android:layout_height="200dp"
            android:layout_width="0dp"
            android:lines="5"
            android:scrollHorizontally="false"
            android:hint="Description"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionLayout"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline9"
                                          android:orientation="vertical" app:layout_constraintGuide_end="30dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="190dp"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline8" app:layout_constraintGuide_begin="31dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:background="#ffffff"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            android:id="@+id/descriptionLayout" app:layout_constraintTop_toBottomOf="@+id/textView7">

        <ImageView
                android:background="@null"
                android:layout_width="60dp"
                android:layout_height="0dp" app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@drawable/vegetarian"
                android:id="@+id/vegetarian"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@drawable/vegan"
                android:id="@+id/vegan"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vegetarian" android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@drawable/cereal"
                android:id="@+id/cereal" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/vegan"
                android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@drawable/spicy"
                android:id="@+id/spicy"
                app:layout_constraintStart_toEndOf="@+id/cereal" android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@drawable/fish"
                android:id="@+id/fish" app:layout_constraintStart_toEndOf="@+id/spicy"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
        />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@drawable/meat"
                android:id="@+id/meat"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/fish"
                android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@drawable/dairy"
                android:id="@+id/dairy"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/meat" android:layout_marginStart="16dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>