<?xml version="1.0" encoding="utf-8"?>


<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#257701ff" android:id="@+id/scrollView3">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".food.AddFoodActivity" android:id="@+id/contraintLayout">
        <EditText
                android:textAlignment="center"
                android:textColorHint="#a9000000"
                android:hint="What are you making?"
                android:background="#d6ffffff"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/plateName"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:layout_constraintBottom_toTopOf="@+id/priceText"/>
        <TextView
                android:text="Add New Plate"
                android:textSize="18sp"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/textView9"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/plateName" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:text="Price"
                android:layout_width="0dp"
                android:layout_height="50dp" android:id="@+id/priceText"
                android:gravity="bottom|center_vertical|center_horizontal|center"
                android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@+id/plateName" android:textAlignment="center"/>
        <SeekBar
                android:layout_width="0dp"
                android:layout_height="50dp" android:id="@+id/seekBar"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                app:layout_constraintTop_toBottomOf="@+id/priceText"
                android:background="@android:color/background_light"/>

        <TextView
                android:text="Description"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="50dp" android:id="@+id/textView7"
                android:gravity="bottom|center"
                android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/seekBar"/>
        <TextView
                android:text="Location"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="50dp" android:id="@+id/textView13"
                android:gravity="bottom|center"
                android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@+id/photo"/>
        <EditText
                android:id="@+id/orderMessage"
                android:gravity="top|left"
                android:maxLines="5"
                android:background="#ffffff"
                android:inputType="textMultiLine"
                android:layout_height="100dp"
                android:layout_width="0dp"
                android:lines="20"
                android:scrollHorizontally="false"
                android:hint="Description"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/descriptionLayout"
                android:focusable="auto" android:layout_marginTop="8dp"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp" app:srcCompat="@drawable/camera_icon"
                android:id="@+id/photo"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@+id/orderMessage" android:background="@android:color/white"
                android:layout_marginTop="8dp"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline9"
                                              android:orientation="vertical" app:layout_constraintGuide_end="30dp"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline8" app:layout_constraintGuide_begin="31dp"
                                              android:orientation="vertical"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:background="#ffffff"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:id="@+id/descriptionLayout" app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintHorizontal_bias="0.0">

            <ImageView
                    android:layout_width="21dp"
                    android:layout_height="0dp" app:srcCompat="@drawable/vegetarian"
                    android:id="@+id/vegetarian"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/vegan"
                    android:layout_marginEnd="16dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" app:srcCompat="@drawable/vegan"
                    android:id="@+id/vegan"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cereal" android:layout_marginEnd="16dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" app:srcCompat="@drawable/cereal"
                    android:id="@+id/cereal" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/spicy" android:layout_marginEnd="16dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" app:srcCompat="@drawable/spicy"
                    android:id="@+id/spicy"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" app:srcCompat="@drawable/fish"
                    android:id="@+id/fish" app:layout_constraintStart_toEndOf="@+id/spicy"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" app:srcCompat="@drawable/meat"
                    android:id="@+id/meat"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/fish"
                    android:layout_marginStart="16dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" app:srcCompat="@drawable/dairy"
                    android:id="@+id/dairy"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/meat" android:layout_marginStart="16dp"
            />
        </android.support.constraint.ConstraintLayout>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/address"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:hint="Address" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@+id/textView13"/>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     xmlns:app="http://schemas.android.com/apk/res-auto"
                     xmlns:tools="http://schemas.android.com/tools"
                     android:id="@+id/container"
                     android:name="com.gdevelopers.movies.movies.FragmentMoreMovies"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     app:layout_behavior="@string/appbar_scrolling_view_behavior"
                     app:layout_constraintTop_toBottomOf="@+id/address"
                     app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                     app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
        <Button
                android:text="Submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/submitButton"
                android:background="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@android:color/white"
                android:textSize="18sp" android:fontFamily="sans-serif" android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/container"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>