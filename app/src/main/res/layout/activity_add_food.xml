<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent" android:layout_width="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#257701ff" android:id="@+id/scrollview"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintVertical_bias="0.0">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".map.AddFoodActivity" android:id="@+id/contraintLayout">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp">
                <TextView
                        android:text="Add New Plate"
                        android:textSize="18sp"
                        android:background="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/title"
                        android:gravity="center"
                        app:layout_constraintBottom_toTopOf="@+id/plateName" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"/>
                <EditText
                        android:background="@drawable/text_input_shape"
                        android:textAlignment="center"
                        android:textColorHint="#a9000000"
                        android:hint="What are you making?"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/plateName"
                        app:layout_constraintTop_toBottomOf="@+id/title"

                />
                <TextView
                        android:text="Location"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:id="@+id/textView13"
                        android:gravity="bottom|center"
                        android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/plateName"/>
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/textView13" android:id="@+id/locationAutocomplete">

                </FrameLayout>
                <TextView
                        android:text="Diners"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="51dp" android:id="@+id/textView19"
                        android:gravity="bottom|center"
                        android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/locationAutocomplete"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView19" android:id="@+id/linearLayout3">

                    <Button
                        android:id="@+id/dinner0"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <Button
                            android:text="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dinner1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_weight="1" style="@style/Widget.AppCompat.Button.Borderless"
                            android:background="@android:color/white"/>
                    <Button
                            android:text="3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dinner2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_weight="1" style="@style/Widget.AppCompat.Button.Borderless"
                            android:background="@android:color/white"/>
                    <Button
                            android:text="4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dinner3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_weight="1" style="@style/Widget.AppCompat.Button.Borderless"
                            android:background="@android:color/white"/>
                </LinearLayout>
                <TextView
                        android:text="Time"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="54dp" android:id="@+id/textView21"
                        android:gravity="bottom|center"
                        android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"/>

                <FrameLayout
                    android:id="@+id/food_time_picker_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </FrameLayout>

                <TextView
                        android:text="Price"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:id="@+id/priceText"
                        android:gravity="bottom|center_vertical|center_horizontal|center"
                        android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@+id/timePicker"/>
                <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:id="@+id/seekBar"
                        app:layout_constraintTop_toBottomOf="@+id/priceText"
                        android:background="@drawable/text_input_shape"/>
                <TextView
                        android:text="Description"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:id="@+id/textView7"
                        android:gravity="bottom|center"
                        android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/seekBar"/>

                <FrameLayout
                    android:id="@+id/set_foot_types_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </FrameLayout>

                <EditText
                        android:id="@+id/bioText"
                        android:gravity="top|left"
                        android:maxLines="5"
                        android:background="@drawable/text_input_shape"
                        android:inputType="textMultiLine"
                        android:layout_height="100dp"
                        android:layout_width="match_parent"
                        android:lines="20"
                        android:scrollHorizontally="false"
                        android:hint="Description"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/descriptionLayout"
                        android:focusable="auto" android:layout_marginTop="8dp"/>
                <ImageView
                        android:background="@drawable/text_input_shape"
                        android:layout_width="match_parent"
                        app:srcCompat="@drawable/get_image_from_camera"
                        android:id="@+id/photo"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintTop_toBottomOf="@+id/bioText"
                        android:layout_height="50dp" android:layout_weight="1" android:padding="9dp"
                        android:layout_marginTop="8dp"/>
                <Button
                        android:text="Submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/submitButton"
                        android:background="@color/colorPrimary"
                        style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@android:color/white"
                        android:textSize="18sp" android:fontFamily="sans-serif" android:textStyle="bold"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/photo"/>

                <ProgressBar
                    android:id="@+id/post_progress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:alpha="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />

    <FrameLayout
        android:id="@+id/select_image_from"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/error_message_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

