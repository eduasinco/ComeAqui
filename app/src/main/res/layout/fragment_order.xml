<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/listItem">

    <TextView
            android:text="Food Name"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:id="@+id/foodName"
            android:width="200dp"
            android:fontFamily="sans-serif" android:textAlignment="viewStart"
            android:textColor="@android:color/background_dark" android:visibility="visible"
            android:gravity="top|center"
            android:textSize="16sp" tools:ignore="RtlCompat"
            app:layout_constraintStart_toStartOf="@+id/orderMessage"
            app:layout_constraintTop_toTopOf="@+id/orderImage"/>
        <ImageView
                android:layout_width="100dp"
                android:scaleType="centerCrop"
                android:layout_height="100dp"
                android:id="@+id/orderImage"
                android:background="#257701ff"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
    <TextView
            android:text="email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/posterEmail"
            android:width="200dp"
            android:fontFamily="sans-serif"
            android:gravity="center" android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/orderMessage"
            tools:ignore="RtlCompat" app:layout_constraintStart_toStartOf="@+id/orderMessage"
            app:layout_constraintBottom_toBottomOf="@+id/orderImage"/>
    <TextView
            android:text="Message"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/orderMessage"
            android:textSize="14sp" android:gravity="center" android:textAlignment="textStart"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="2" tools:ignore="RtlCompat"
            app:layout_constraintStart_toEndOf="@+id/orderImage"
            android:layout_marginStart="16dp" tools:layout_editor_absoluteY="40dp"/>

        <View
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_width="0dp" android:alpha="0.1"
                android:id="@+id/view"
                app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>