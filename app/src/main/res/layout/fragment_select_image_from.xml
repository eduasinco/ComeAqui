<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".profile.SelectImageFromFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/out_of_card" android:visibility="visible">

        <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:visibility="visible"
                    android:id="@+id/select_from" android:padding="8dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" android:id="@+id/select_from_camera">
                    <ImageView
                            android:src="@drawable/get_image_from_camera"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content" android:id="@+id/imageView8" android:layout_weight="0"
                            android:padding="4dp"/>
                    <TextView
                            android:text="Select Image from camera"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/textView5" android:layout_weight="0"
                            android:gravity="center_vertical" android:textStyle="bold"
                            android:textAlignment="textStart"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" android:id="@+id/select_from_gallery">
                    <ImageView
                            android:src="@drawable/gallery"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content" android:id="@+id/imageView7" android:padding="4dp"/>
                    <TextView
                            android:text="Select from gallery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/textView4"
                            android:gravity="center_vertical"
                            android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>