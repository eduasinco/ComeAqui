<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:id="@+id/listItem">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="140dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
    >

        <TextView
                android:text="Chicken T (media)"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/foodName"
                android:width="200dp"
                android:fontFamily="sans-serif" android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark" android:visibility="visible"
                android:gravity="top|center"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toTopOf="@+id/foodImage" app:layout_constraintEnd_toStartOf="@+id/foodImage"
                android:layout_marginEnd="8dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/hamburger"
                android:id="@+id/foodImage"
                android:background="#257701ff"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline7"/>
        <TextView
                android:text="30â‚¬"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:id="@+id/price"
                android:width="200dp"
                android:fontFamily="sans-serif"
                android:gravity="center" android:textAlignment="textStart"
                app:layout_constraintBottom_toBottomOf="@+id/foodImage"
                app:layout_constraintStart_toStartOf="@+id/guideline6"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline6"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_begin="15dp"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline7"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_end="15dp"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/constraintLayout"
                app:layout_constraintEnd_toStartOf="@+id/foodImage"
                app:layout_constraintBottom_toBottomOf="@+id/foodImage" android:layout_marginEnd="8dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vegetarian"
                    app:layout_constraintEnd_toStartOf="@+id/vegan"
                    app:layout_constraintTop_toTopOf="@+id/vegan" android:layout_marginEnd="2dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vegan"
                    app:layout_constraintEnd_toStartOf="@+id/celiac"
                    app:layout_constraintTop_toTopOf="@+id/celiac" android:layout_marginEnd="2dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/celiac"
                    app:layout_constraintEnd_toStartOf="@+id/spicy"
                    app:layout_constraintTop_toTopOf="@+id/spicy"
                    android:layout_marginEnd="2dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spicy"
                    app:layout_constraintEnd_toStartOf="@+id/fish"
                    app:layout_constraintTop_toTopOf="@+id/fish" android:layout_marginEnd="2dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fish"
                    app:layout_constraintEnd_toStartOf="@+id/meat"
                    app:layout_constraintTop_toTopOf="@+id/meat" android:layout_marginEnd="2dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/meat"
                    app:layout_constraintEnd_toStartOf="@+id/dairy"
                    app:layout_constraintTop_toTopOf="@+id/dairy"
                    android:layout_marginEnd="2dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dairy"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            />
        </android.support.constraint.ConstraintLayout>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/description"
                app:layout_constraintBottom_toTopOf="@+id/price"
                app:layout_constraintTop_toBottomOf="@+id/foodName" app:layout_constraintEnd_toStartOf="@+id/foodImage"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline6"
                android:textSize="10sp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>