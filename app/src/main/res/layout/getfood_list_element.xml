<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/listItem">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="140dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/constraintLayout2">

        <TextView
                android:text="Chicken T (media)"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/foodName"
                android:width="200dp"
                android:fontFamily="sans-serif" android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark" android:visibility="visible"
                android:gravity="top|center"
                android:textSize="16sp" tools:ignore="RtlCompat"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintEnd_toStartOf="@+id/foodImage" android:layout_marginEnd="24dp"/>
        <ImageView
                android:layout_width="100dp"
                android:scaleType="centerCrop"
                android:layout_height="100dp"
                android:id="@+id/foodImage"
                android:background="#257701ff"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline7"/>
        <TextView
                android:text="30â‚¬"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:width="200dp"
                android:fontFamily="sans-serif"
                android:gravity="center" android:textAlignment="textStart"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/description"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintEnd_toStartOf="@+id/foodImage" android:layout_marginEnd="24dp"
                tools:ignore="RtlCompat"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline6"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_begin="15dp"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline7"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_end="15dp"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toBottomOf="@+id/price" android:layout_marginTop="8dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/vegetarian"
                    app:layout_constraintEnd_toStartOf="@+id/vegan"
                    android:layout_marginEnd="1dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/vegan"
                    app:layout_constraintEnd_toStartOf="@+id/celiac"
                    app:layout_constraintTop_toTopOf="@+id/celiac" android:layout_marginEnd="1dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/celiac"
                    app:layout_constraintEnd_toStartOf="@+id/spicy"
                    app:layout_constraintTop_toTopOf="@+id/spicy"
                    android:layout_marginEnd="1dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/spicy"
                    app:layout_constraintEnd_toStartOf="@+id/fish"
                    app:layout_constraintTop_toTopOf="@+id/fish" android:layout_marginEnd="1dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/fish"
                    app:layout_constraintEnd_toStartOf="@+id/meat"
                    app:layout_constraintTop_toTopOf="@+id/meat" android:layout_marginEnd="1dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/meat"
                    app:layout_constraintEnd_toStartOf="@+id/dairy"
                    app:layout_constraintTop_toTopOf="@+id/dairy"
                    android:layout_marginEnd="1dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/dairy"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            />
        </android.support.constraint.ConstraintLayout>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/description"
                android:textSize="14sp" android:gravity="center" android:textAlignment="textStart"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:maxLines="2" tools:ignore="RtlCompat"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toBottomOf="@+id/foodName" app:layout_constraintEnd_toStartOf="@+id/foodImage"
                android:layout_marginEnd="24dp"/>

        <View
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_width="0dp" android:alpha="0.1"
                android:id="@+id/view"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline7"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
        />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>