<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodLookActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scrollView4"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="65dp"
            tools:layout_editor_absoluteX="0dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:padding="24dp"
                      android:background="@color/grey_lighter">

            <TextView
                    android:text="Plate Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/postPlateName" android:textSize="18sp"
                    android:textStyle="bold" android:textColor="@color/colorPrimary" android:layout_marginBottom="8dp"/>
            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/types"
                    app:layout_constraintTop_toBottomOf="@+id/plate_name" app:layout_constraintStart_toStartOf="parent"
                    android:paddingBottom="16dp">

            </FrameLayout>
            <TextView
                    android:text="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView18" android:textStyle="bold"
                    android:textColor="@color/colorPrimary" android:paddingBottom="8dp"/>
            <TextView
                    android:text="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/post_description"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="8dp"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/container2"
                    android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/image_layout" android:visibility="gone">

                <ImageView
                    android:id="@+id/post_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryLight"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_food"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.cardview.widget.CardView>
            <TextView
                    android:text="Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView20" android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginBottom="8dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/loc_icon"
                        android:id="@+id/locationImage2" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:text="Calle Julian Romea, 5, 6D"
                        android:lines="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/posterLocation"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/locationImage" android:layout_marginStart="16dp"
                        android:gravity="center_vertical" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" android:layout_weight="1"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp" app:srcCompat="@drawable/world_map"
                    android:id="@+id/static_map"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="8dp">
                <TextView
                        android:text="Meal time: "
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/meal_time" android:layout_weight="1"
                        android:textStyle="bold" android:textColor="@color/colorPrimary"/>
                <TextView
                        android:text="-- : --"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/time" android:layout_weight="1"
                        android:textAlignment="textEnd" android:textStyle="bold" android:textSize="18sp"
                        android:textColor="@color/grey"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/box_soft_outline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Price"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="-.--â‚¬"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/payment_method_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/card_icon"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:padding="8dp"
                    app:srcCompat="@drawable/mastercard_icon" />

                <TextView
                    android:id="@+id/card_last_numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="****6208"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/change_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="CHANGE"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/placeOrderButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:text="PLACE ORDER"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content"
                                       app:layout_constraintTop_toTopOf="parent" android:elevation="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="65dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/back_arrow" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/poster_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/no_profile_photo"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/colorPrimaryDark"
                app:civ_shadow_radius="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/back"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/poster_image" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                        android:text="Eduardo Rodriguez"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/poster_name" android:textSize="18sp"
                        android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
                <TextView
                        android:text="eduasinco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/username"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>