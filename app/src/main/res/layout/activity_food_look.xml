<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodLookActivity">

    <ImageView
            android:scaleType="centerCrop"
            android:background="#257701ff"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:id="@+id/foodLookImage" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/foodLookImage" android:textSize="24sp"
            android:textColor="@android:color/black" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionId"
            app:layout_constraintStart_toStartOf="@+id/name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:textSize="18sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name"/>
    <Button
            android:text="Add to cart"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/addButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@android:color/holo_green_dark" android:textColor="@android:color/white"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/descriptionId"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/descriptionId">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/vegetarian"
                app:layout_constraintEnd_toStartOf="@+id/vegan"
                android:layout_marginEnd="1dp"
        />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/vegan"
                app:layout_constraintEnd_toStartOf="@+id/celiac"
                app:layout_constraintTop_toTopOf="@+id/celiac" android:layout_marginEnd="1dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/celiac"
                app:layout_constraintEnd_toStartOf="@+id/spicy"
                app:layout_constraintTop_toTopOf="@+id/spicy"
                android:layout_marginEnd="1dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/spicy"
                app:layout_constraintEnd_toStartOf="@+id/fish"
                app:layout_constraintTop_toTopOf="@+id/fish" android:layout_marginEnd="1dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/fish"
                app:layout_constraintEnd_toStartOf="@+id/meat"
                app:layout_constraintTop_toTopOf="@+id/meat" android:layout_marginEnd="1dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/meat"
                app:layout_constraintEnd_toStartOf="@+id/dairy"
                app:layout_constraintTop_toTopOf="@+id/dairy"
                android:layout_marginEnd="1dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/dairy"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>