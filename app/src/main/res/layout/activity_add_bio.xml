<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.edit_profile.AddBioActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout2">
        <Button
                android:text="discard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/discard" android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@android:color/holo_red_dark"
                android:background="@color/grey_light"/>
        <Button
                android:text="save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/save" android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@android:color/holo_green_dark"
                android:background="@color/grey_light"/>
    </LinearLayout>
    <EditText
            android:background="@drawable/box_element"
            android:minHeight="50dp"
            android:lines="10"
            android:maxLength="101"
            android:inputType="textMultiLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/bio_edit_text"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Bio" android:textAlignment="textStart"
            android:gravity="top"/>
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content"
                                       app:layout_constraintTop_toTopOf="parent" android:elevation="5dp"
                                       android:id="@+id/cardView">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="65dp">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/back"
                    android:id="@+id/back"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"/>
            <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/no_profile_photo"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="2dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="1"
                    app:civ_shadow_color="@color/colorPrimaryDark"
                    android:id="@+id/poster_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="50dp" app:layout_constraintStart_toStartOf="parent"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/poster_image" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                        android:text="Eduardo Rodriguez"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/poster_name" android:textSize="18sp"
                        android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
                <TextView
                        android:text="eduasinco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/username"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <TextView
            android:text="0/101"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_count"
            app:layout_constraintTop_toBottomOf="@+id/bio_edit_text" app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>