<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.payment.AddPaymentMethodActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                android:textColor="@android:color/black"/>
        <TextView
                android:text="Payment Methods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:textStyle="bold"/>
        <TextView
                android:text="Add Payment Method"
                android:onClick="onScanPress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addPayment"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:textColor="@android:color/holo_green_dark"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/fragment"/>
        <fragment
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:name="com.example.eduardorodriguez.comeaqui.profile.payment.PaymentMethodFragment"
                android:id="@+id/fragment"
                app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>