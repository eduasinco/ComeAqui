<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.edit_profile.edit_account_details.payment.AddPaymentMethodActivity">

    <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp" android:gravity="center_vertical" android:paddingStart="8dp"
            android:id="@+id/linearLayout7" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp" app:srcCompat="@drawable/back_white" android:id="@+id/back_arrow"
                android:layout_weight="0"/>
        <TextView
                android:text="Payment Methods"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/textView6" android:layout_weight="0"
                android:gravity="center_vertical" android:textStyle="bold" android:textSize="24sp"
                android:textColor="@android:color/white" android:paddingStart="24dp"/>
    </LinearLayout>
    <Button
            android:text="Add Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_card" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@android:color/white" android:background="@android:color/holo_green_dark"/>
    <TextView
            android:text="----- OR ------"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/textView8" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_card" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:gravity="center" android:textStyle="bold" android:textSize="18sp"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cio_ic_paypal_monogram"
            android:id="@+id/imageButton2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" style="@android:style/Widget.ImageButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>