<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        app:layout_scrollFlags="scroll|snap">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.AppBarLayout
                        android:id="@+id/appbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                        <androidx.appcompat.widget.Toolbar android:layout_width="match_parent" android:layout_height="56dp"
                                                           android:id="@+id/toolbar">
                                <ImageView
                                        android:layout_gravity="right"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp" app:srcCompat="@drawable/messege_icon"
                                        android:id="@+id/chat" android:padding="14dp"/>
                        </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.AppBarLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/main_nav"
                android:layout_below="@id/main_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/main_frame"
                android:layout_marginTop="56dp">
        </FrameLayout>

        <include android:layout_width="match_parent" android:layout_height="658dp" layout="@layout/fragment_map"
                 android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                 android:layout_above="@+id/main_nav" android:visibility="gone" android:id="@+id/fragmentMap">
        </include>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp" android:id="@+id/main_nav">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/nav_map">
                        <ImageView
                                android:clickable="true"
                                android:layout_width="24dp"
                                android:layout_height="24dp" app:srcCompat="@drawable/food"
                                android:id="@+id/map"
                                android:layout_weight="1"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/nav_orders">

                        <ImageView
                                android:clickable="true"
                                android:layout_width="24dp"
                                android:layout_height="24dp" app:srcCompat="@drawable/order"
                                android:id="@+id/order" android:layout_weight="1"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                                android:background="@drawable/box_notification"
                                android:text="1234"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp" android:id="@+id/textView11"
                                android:gravity="center"
                                android:layout_marginStart="15dp" app:layout_constraintStart_toStartOf="@+id/order"
                                android:layout_marginBottom="15dp" app:layout_constraintBottom_toBottomOf="@+id/order"
                                android:textSize="10sp" android:textColor="@android:color/white"
                                android:paddingStart="6dp" android:paddingEnd="6dp" android:textStyle="bold"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1"
                        android:id="@+id/nav_notifications">

                        <ImageView
                                android:clickable="true"
                                android:layout_width="24dp"
                                android:layout_height="24dp" app:srcCompat="@drawable/notification"
                                android:id="@+id/notification" android:layout_weight="1"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/nav_profile">

                        <ImageView
                                android:clickable="true"
                                android:layout_width="24dp"
                                android:layout_height="24dp" app:srcCompat="@drawable/profile"
                                android:id="@+id/profile" android:layout_weight="1"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

</RelativeLayout>