<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodLookActivity">

    <ImageView
            android:scaleType="centerCrop"
            android:background="#257701ff"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:id="@+id/postFoodPhoto" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postPlateName" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/postFoodPhoto" android:textSize="24sp"
            android:textColor="@android:color/black" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/postDescription"
            app:layout_constraintStart_toStartOf="@+id/postPlateName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:textSize="18sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/postPlateName"/>
    <Button
            android:text="confrim order"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/confrimButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@android:color/holo_green_dark" android:textColor="@android:color/white"/>
    <ImageView
            android:layout_width="92dp"
            android:scaleType="centerCrop"
            android:layout_height="95dp" app:srcCompat="@drawable/no_profile_photo"
            android:id="@+id/senderImage" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/postDescription" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/senderName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/senderImage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/senderEmail" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/senderName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>