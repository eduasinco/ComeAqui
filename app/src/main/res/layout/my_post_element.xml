<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/constraintLayout5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="8dp">

        <include android:layout_width="0dp" android:layout_height="0dp"
                 layout="@layout/card_background"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:lines="3"
                android:text="Eduardo Rodriguez Perez"
                android:layout_width="0dp"
                android:layout_height="21dp" android:id="@+id/poster_name"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_vertical"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/poster_username"
                android:text="@eduasinco"
                app:layout_constraintStart_toEndOf="@+id/poster_name" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/poster_name"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                tools:context=".FoodElementFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:id="@+id/post_button"
                app:layout_constraintTop_toBottomOf="@+id/poster_name"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                android:paddingBottom="20dp">

            <include android:layout_width="0dp" android:layout_height="0dp"
                     layout="@layout/card_background"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/card_button"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:padding="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                        android:text="Plate Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/plate_name"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:textStyle="bold" android:textColor="@color/colorPrimary"
                        android:paddingBottom="8dp"/>
                <TextView
                        android:text="Description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/container3" android:paddingBottom="16dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="Meal time: "
                            android:layout_height="wrap_content" android:id="@+id/textView25" android:layout_weight="1"
                            android:textStyle="bold" android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"/>
                    <TextView
                            android:text="-- : --"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/time" android:layout_weight="1"
                            android:textAlignment="textStart" android:textStyle="bold" android:textSize="18sp"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:text="_ . __â‚¬"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/price"
                            app:layout_constraintBottom_toBottomOf="@+id/time"
                            app:layout_constraintEnd_toEndOf="parent"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/image_layout" android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/post_button" android:layout_marginTop="8dp">

            <ImageView
                    android:src="@drawable/no_food"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:id="@+id/post_image"
                    android:background="@color/colorPrimaryLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
                    android:visibility="visible"/>
            <include android:layout_width="0dp" android:layout_height="0dp"
                     layout="@layout/corners" app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintBottom_toBottomOf="@+id/post_image"
                     app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
                     app:layout_constraintVertical_bias="1.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>