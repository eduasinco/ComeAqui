<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CardInformationActivity">

    <EditText
            android:id="@+id/creditCard"
            android:inputType="number"
            android:digits=" 1234567890"
            android:maxLength="22"
            app:layout_constraintTop_toTopOf="parent" android:layout_width="0dp" android:layout_height="50dp"
            android:layout_marginTop="160dp"
            android:textSize="24sp" android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:hint="Card Number" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:id="@+id/zipCode"
            android:inputType="number"
            android:digits=" 1234567890"
            android:maxLength="22"
            android:layout_width="0dp" android:layout_height="50dp"
            android:textSize="24sp" android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:hint="Zip Code" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/ccp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:onClick="onScanPress"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/cardPhoto" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/creditCard" app:layout_constraintEnd_toEndOf="@+id/creditCard"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="165dp"
            android:layout_height="46dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/cvv" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/creditCard" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:hint="CVV"/>
    <EditText
            android:layout_width="165dp"
            android:layout_height="51dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/expiryDate" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/creditCard" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:hint="MM/YY"/>

    <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ccp_showFullName="true"
            app:ccp_showPhoneCode="false"
            app:ccp_showNameCode="false" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/expiryDate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="SAVE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/saveCardButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimary"
            android:textColor="@android:color/white" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

</android.support.constraint.ConstraintLayout>