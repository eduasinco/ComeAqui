<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.edit_profile.edit_account_details.payment.CreditCardInformationActivity">

    <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp" android:gravity="center_vertical" android:paddingStart="8dp"
            android:id="@+id/linearLayout7" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp" app:srcCompat="@drawable/back_white" android:id="@+id/back"
                android:layout_weight="0"/>
        <TextView
                android:text="Payment Methods"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/textView6" android:layout_weight="0"
                android:gravity="center_vertical" android:textStyle="bold" android:textSize="24sp"
                android:textColor="@android:color/white" android:paddingStart="24dp"/>
    </LinearLayout>
    <EditText
            android:id="@+id/creditCard"
            android:inputType="number"
            android:digits=" 1234567890"
            android:maxLength="22"
            android:layout_width="0dp" android:layout_height="50dp"
            android:textSize="24sp" android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:hint="Card Number" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout7"/>
    <ImageView
            android:layout_width="wrap_content"
            android:onClick="onScanPress"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/cardPhoto" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/creditCard" app:layout_constraintEnd_toEndOf="@+id/creditCard"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="165dp"
            android:layout_height="46dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/cvv" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/creditCard" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:hint="CVV"/>
    <EditText
            android:layout_width="165dp"
            android:layout_height="51dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/expiryDate" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/creditCard" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:hint="MM/YY"/>

    <Button
            android:text="SAVE CARD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/saveCardButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/expiryDate"/>

</androidx.constraintlayout.widget.ConstraintLayout>