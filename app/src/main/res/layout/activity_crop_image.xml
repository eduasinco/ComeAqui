<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.edit_profile.CropImageActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/no_profile_photo"
            android:id="@+id/image"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout2">
        <Button
                android:text="discard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/discard" android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@android:color/holo_red_dark"
                android:background="@color/grey_light"/>
        <Button
                android:text="save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/save" android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@android:color/holo_green_dark"
                android:background="@color/grey_light"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>