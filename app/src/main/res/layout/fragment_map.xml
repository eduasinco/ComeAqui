<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderLookActivity">
    <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tint="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#FFFFFF"
            android:clickable="true" app:srcCompat="@drawable/prepare"
            android:id="@+id/fab" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:backgroundTint="@color/colorPrimary" app:layout_constraintBottom_toBottomOf="@+id/mapView"
            android:layout_marginBottom="8dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="150dp" android:id="@+id/postInfo"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:visibility="gone">

            <View
                    android:layout_height="3dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="0dp"
                    android:id="@+id/view2"
                    app:layout_constraintEnd_toStartOf="@+id/guideline7"
                    app:layout_constraintStart_toStartOf="@+id/guideline6"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:layout_width="130dp"
                    android:scaleType="centerCrop"
                    android:layout_height="0dp" app:srcCompat="@drawable/no_food"
                    android:id="@+id/foodImage" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"/>


            <TextView
                    android:text="No data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/foodName"
                    app:layout_constraintTop_toTopOf="@+id/foodImage"
                    app:layout_constraintStart_toEndOf="@+id/foodImage"
                    android:layout_marginStart="16dp" android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/foodDescription"
                    android:maxLines="2"
                    app:layout_constraintStart_toEndOf="@+id/foodImage"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/foodName" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/posterName"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posterEmail"
                    app:layout_constraintBottom_toBottomOf="@+id/foodImage"
                    app:layout_constraintEnd_toStartOf="@+id/posterImage" android:layout_marginEnd="8dp"
                    android:textSize="10sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posterName"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/posterEmail"
                    app:layout_constraintEnd_toStartOf="@+id/posterImage" android:layout_marginEnd="8dp"
                    android:textSize="12sp" android:textStyle="bold" android:textColor="@android:color/black"/>

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/no_profile_photo"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="2dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="1"
                    app:civ_shadow_color="@color/colorPrimaryDark"
                    android:id="@+id/posterImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"/>

        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="400dp" android:id="@+id/bigPostInfo" android:visibility="gone">
            <View
                    android:layout_height="3dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="0dp"
                    android:id="@+id/view"
                    app:layout_constraintEnd_toStartOf="@+id/guideline7"
                    app:layout_constraintStart_toStartOf="@+id/guideline6"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="Eduardo Rodriguez"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bigPosterName"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="24dp" android:textSize="18sp" android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"/>
            <TextView
                    android:text="eduasinco@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bigPosterEmail" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/bigPosterName"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"/>
            <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp" app:srcCompat="@drawable/no_food"
                    android:id="@+id/bigFoodImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp" app:layout_constraintBottom_toBottomOf="@+id/bigPosterLocation"
            />
            <TextView
                    android:text="Ready for:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/bigPosterEmail" android:textStyle="bold"/>
            <TextView
                    android:text="15:30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/eatTime" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp" android:textSize="36sp" android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Confirm Assistance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/confirmButton"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@android:color/holo_green_dark" android:textColor="@android:color/white"/>
            <TextView
                    android:text="description "
                    android:layout_width="0dp"
                    android:lines="5"
                    android:layout_height="wrap_content"
                    android:id="@+id/bigPostDescription"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                    app:layout_constraintHorizontal_bias="0.4" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView24"/>
            <TextView
                    android:text="+34676408025"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bigPosterPhone"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp" app:layout_constraintTop_toTopOf="@+id/bigPosterEmail"
            />
            <TextView
                    android:text="Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    app:layout_constraintTop_toBottomOf="@+id/eatTime" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Calle Julian Romea 5, 6D"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bigPosterLocation" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView22" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp" app:layout_constraintEnd_toStartOf="@+id/bigFoodImage"
                    android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/bigPosterLocation" android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/no_profile_photo"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="3dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="1"
            app:civ_shadow_color="@color/colorPrimaryDark"
            android:id="@+id/bigPosterImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="350dp"
            android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>