<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderLookActivity">
    <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:tint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/postInfo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#FFFFFF"
            android:clickable="true" app:srcCompat="@drawable/prepare"
            android:id="@+id/fab" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/postInfo"
            app:backgroundTint="@color/colorPrimary"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp" android:id="@+id/postInfo"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="visible">

        <ImageView
                android:layout_width="130dp"
                android:scaleType="centerCrop"
                android:layout_height="0dp" app:srcCompat="@drawable/no_food"
                android:id="@+id/foodImage" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"/>
        <TextView
                android:text="No data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foodName"
                app:layout_constraintTop_toTopOf="@+id/foodImage" app:layout_constraintStart_toEndOf="@+id/foodImage"
                android:layout_marginStart="16dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/foodDescription"
                android:maxLines="2"
                app:layout_constraintStart_toEndOf="@+id/foodImage"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/foodName" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/posterName"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/posterEmail"
                app:layout_constraintBottom_toBottomOf="@+id/foodImage"
                app:layout_constraintEnd_toStartOf="@+id/posterImage" android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/posterName"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/posterEmail"
                app:layout_constraintEnd_toStartOf="@+id/posterImage" android:layout_marginEnd="8dp"/>
        <ImageView
                android:layout_width="50dp"
                android:scaleType="centerCrop"
                android:layout_height="50dp" app:srcCompat="@drawable/no_profile_photo"
                android:id="@+id/posterImage" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/posterEmail"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>